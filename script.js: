document.getElementById('convertBtn').addEventListener('click', function() {
    const inputCode = document.getElementById('inputCode').value;
    const inputLang = document.getElementById('inputLang').value;
    const outputLang = document.getElementById('outputLang').value;

    if (inputCode.trim() === '') {
        alert('Please enter code to convert.');
        return;
    }

    document.getElementById('loading').classList.remove('hidden');

    // Simulate conversion with a timeout
    setTimeout(() => {
        let convertedCode;

        // Simple mock conversion logic for demonstration
        if (inputLang === 'javascript' && outputLang === 'python') {
            convertedCode = inputCode.replace(/console.log/g, 'print');
        } else if (inputLang === 'python' && outputLang === 'javascript') {
            convertedCode = inputCode.replace(/print/g, 'console.log');
        } else {
            convertedCode = `Conversion from ${inputLang} to ${outputLang} is not implemented yet.`;
        }

        document.getElementById('outputCode').value = convertedCode;
        document.getElementById('loading').classList.add('hidden');
    }, 2000); // Simulate loading time
});
